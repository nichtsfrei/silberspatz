#!/bin/sh

STATE_FILE="$XDG_RUNTIME_DIR/osk_visible_state"

if [ ! -f "$STATE_FILE" ]; then
    echo "0" > "$STATE_FILE"
fi

current_state=$(cat "$STATE_FILE")

if [ "$current_state" == "1" ]; then
    echo "0" > "$STATE_FILE"
    pkill onscreenski
else
    echo "1" > "$STATE_FILE"
    onscreenski
fi
