#!/bin/sh
ENTRY="$1"
ITEM='Password: '
[[ "$2" = "user" ]] && ITEM='UserName: '
secret-tool lookup keepass keepass | \
	flatpak run --command=keepassxc-cli org.keepassxc.KeePassXC show -k ~/Documents/key ~/Documents/Nextcloud/Passwords.kdbx -s "$ENTRY" | \
	grep "$ITEM" | sed "s/$ITEM//" | \
	wl-copy
