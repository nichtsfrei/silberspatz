[Unit]
Description=Ausgabenzettel Container
Wants=ausgabenzettel.service
RequiresMountsFor=/run/user/%U/containers

[Service]
Type=oneshot
TimeoutStartSec=600
ExecStart=/usr/bin/podman pull ghcr.io/nichtsfrei/ausgabenzettel:main
ExecStartPost=/bin/systemctl restart ausgabenzettel.service
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target
