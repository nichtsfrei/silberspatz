[Unit]
Description=PostgreSQL Container
Wants=passbolt.service
After=network-online.target
Requires=network-online.target
RequiresMountsFor=%t/containers

[Service]
Type=oneshot
TimeoutStartSec=600
User=podman
Group=podman
ExecStart=/usr/bin/podman pull docker.io/passbolt/passbolt:latest-ce
ExecStartPost=/bin/systemctl restart passbolt.service
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
